

{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Fortran (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "compile_all",
      "program": "${workspaceFolder}/UFEMISM_program",
      "cwd":     "${workspaceFolder}",
      "args": [],
      "environment": [],
